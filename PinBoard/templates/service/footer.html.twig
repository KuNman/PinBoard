{% block footer %}
    <div class="footer">
        <div class="footer-header">
            <div>Footer</div>
            <button onclick="logoutUser()">Logout</button>
            <a href="/register"<button>Register</button>
            <a href="/login"<button>Login</button>
            <a href="/admin"<button>Admin</button>
            <a href="/"<button>Home</button>
        </div>
        <div class="footer-content"></div>
    </div>
{% endblock footer %}
<script>
    const logoutUser = () => {
        $.ajax({
            url: "/logoutUser",
            type: "post",
            success: function(response) {
                if(response == 1) {
                    window.location.href = '/';
                } else if(response == 0) {
                    alert('Error.');
                }
            }
        })
    }
</script>